        <service id="shopware_adapter.query_handler.fetch_all_payment_methods" class="ShopwareAdapter\ServiceBus\QueryHandler\PaymentMethod\FetchAllPaymentMethodsQueryHandler" public="false">
            <argument type="service" id="models" />
