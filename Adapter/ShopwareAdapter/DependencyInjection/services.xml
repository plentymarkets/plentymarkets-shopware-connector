        <service id="shopware_adapter.query_handler.fetch_all_payments" class="ShopwareAdapter\ServiceBus\QueryHandler\Payment\FetchAllPaymentsQueryHandler" public="false">
            <argument type="service" id="shopware_adapter.response_parser.payment" />
            <argument type="service" id="shopware_adapter.data_provider.order" />
            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="plenty_connector.console.output_handler" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="shopware_adapter.query_handler.fetch_changed_payments" class="ShopwareAdapter\ServiceBus\QueryHandler\Payment\FetchChangedPaymentsQueryHandler" public="false">
            <argument type="service" id="shopware_adapter.response_parser.payment" />
            <argument type="service" id="shopware_adapter.data_provider.order" />
            <argument type="service" id="plenty_connector.logger" />
