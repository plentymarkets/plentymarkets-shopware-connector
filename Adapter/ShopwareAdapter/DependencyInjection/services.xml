<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Misc Components -->
        <service id="shopware_adapter.shopware_translation_component" class="Shopware_Components_Translation" />

        <service id="shopware.tax_repository" class="Shopware\Models\Tax\Repository">
            <factory service="models" method="getRepository" />
            <argument type="string">Shopware\Models\Tax\Tax</argument>
        </service>

        <!-- Data Provider -->

        <service id="shopware_adapter.data_provider.currency" class="ShopwareAdapter\DataProvider\Currency\CurrencyDataProvider" public="false">
            <argument type="service" id="models" />
        </service>

        <service id="shopware_adapter.data_provider.customer_group" class="ShopwareAdapter\DataProvider\CustomerGroup\CustomerGroupDataProvider" public="false">
            <argument type="service" id="models" />
        </service>

        <service id="shopware_adapter.data_provider.translation" class="ShopwareAdapter\DataProvider\Translation\TranslationDataProvider" public="false">
            <argument type="service" id="models" />
        </service>

        <service id="shopware_adapter.data_provider.media" class="ShopwareAdapter\DataProvider\Media\MediaDataProvider" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_attribute.data_loader" />
        </service>

        <service id="shopware_adapter.data_provider.order" class="ShopwareAdapter\DataProvider\Order\OrderDataProvider" public="false">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware_adapter.shopware_resource.order" />
        </service>

        <service id="shopware_adapter.data_provider.shop" class="ShopwareAdapter\DataProvider\Shop\ShopDataProvider" public="false">
            <argument type="service" id="models" />
        </service>

        <!-- Data Persister -->

        <service id="shopware_adapter.data_persister.translation" class="ShopwareAdapter\DataPersister\Translation\TranslationDataPersister" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="shopware_adapter.data_provider.translation" />
            <argument type="service" id="plenty_connector.translation_helper" />
            <argument type="service" id="shopware_adapter.shopware_translation_component" />
            <argument type="service" id="models" />
        </service>

        <service id="shopware_adapter.data_persister.attribute" class="ShopwareAdapter\DataPersister\Attribute\AttributeDataPersister" public="false">
            <argument type="service" id="shopware_attribute.crud_service" />
            <argument type="service" id="models" />
            <argument type="service" id="shopware_attribute.data_persister" />
        </service>

        <!-- Helper -->

        <service id="shopware_adapter.attribute_helper" class="ShopwareAdapter\Helper\AttributeHelper">
            <argument type="service" id="plenty_connector.validator_service" />
        </service>

        <!-- Request Generator -->

        <service id="shopware_adapter.request_generator.product" class="ShopwareAdapter\RequestGenerator\Product\ProductRequestGenerator" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="models" />
            <argument type="service" id="shopware_adapter.request_generator.product.configurator_set" />
            <argument type="service" id="plenty_connector.config_service" />
            <argument type="service" id="plenty_connector.logger" />
        </service>

        <service id="shopware_adapter.request_generator.product.configurator_set" class="ShopwareAdapter\RequestGenerator\Product\ConfiguratorSet\ConfiguratorSetRequestGenerator" public="false">
            <argument type="service" id="plenty_connector.config_service" />
        </service>

        <service id="shopware_adapter.request_generator.product.variation" class="ShopwareAdapter\RequestGenerator\Product\Variation\VariationRequestGenerator" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_adapter.data_provider.customer_group" />
        </service>

        <service id="shopware_adapter.request_generator.media" class="ShopwareAdapter\RequestGenerator\Media\MediaRequestGenerator" public="false">
            <argument type="service" id="shopware_adapter.data_provider.media" />
        </service>

        <!-- Response Parser -->

        <service id="shopware_adapter.response_parser.country" class="ShopwareAdapter\ResponseParser\Country\CountryResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.currency" class="ShopwareAdapter\ResponseParser\Currency\CurrencyResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.customer_group" class="ShopwareAdapter\ResponseParser\CustomerGroup\CustomerGroupResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.language" class="ShopwareAdapter\ResponseParser\Language\LanguageResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.order" class="ShopwareAdapter\ResponseParser\Order\OrderResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_adapter.response_parser.order_item" />
            <argument type="service" id="shopware_adapter.response_parser.address" />
            <argument type="service" id="shopware_adapter.response_parser.customer" />
            <argument type="service" id="shopware_adapter.data_provider.currency" />
            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="shopware.tax_repository" />
        </service>

        <service id="shopware_adapter.response_parser.order_item" class="ShopwareAdapter\ResponseParser\OrderItem\OrderItemResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware.tax_repository" />
            <argument type="service" id="plenty_connector.config_service" />
        </service>

        <service id="shopware_adapter.response_parser.order_status" class="ShopwareAdapter\ResponseParser\OrderStatus\OrderStatusResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.customer" class="ShopwareAdapter\ResponseParser\Customer\CustomerResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="models" />
            <argument type="service" id="plenty_connector.logger" />
        </service>

        <service id="shopware_adapter.response_parser.address" class="ShopwareAdapter\ResponseParser\Address\AddressResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.payment" class="ShopwareAdapter\ResponseParser\Payment\PaymentResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_adapter.data_provider.currency" />
            <argument type="service" id="plenty_connector.logger" />
        </service>

        <service id="shopware_adapter.response_parser.payment_method" class="ShopwareAdapter\ResponseParser\PaymentMethod\PaymentMethodResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.payment_status" class="ShopwareAdapter\ResponseParser\PaymentStatus\PaymentStatusResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.shipping_profile" class="ShopwareAdapter\ResponseParser\ShippingProfile\ShippingProfileResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.shop" class="ShopwareAdapter\ResponseParser\Shop\ShopResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.unit" class="ShopwareAdapter\ResponseParser\Unit\UnitResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <service id="shopware_adapter.response_parser.vat_rate" class="ShopwareAdapter\ResponseParser\VatRate\VatRateResponseParser" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
        </service>

        <!-- Shopware API Resources -->

        <service id="shopware_adapter.shopware_api_manager" class="Shopware\Components\Api\Manager" public="false" />

        <service id="shopware_adapter.shopware_resource.manufacturer" class="Shopware\Components\Api\Resource\Manufacturer" public="false">
            <factory service="shopware_adapter.shopware_api_manager" method="getResource" />

            <argument type="string">Manufacturer</argument>
        </service>

        <service id="shopware_adapter.shopware_resource.order" class="Shopware\Components\Api\Resource\Order" public="false">
            <factory service="shopware_adapter.shopware_api_manager" method="getResource" />

            <argument type="string">Order</argument>
        </service>

        <!-- Category command handlers -->

        <service id="shopware_adapter.command_handler.handle_category" class="ShopwareAdapter\ServiceBus\CommandHandler\Category\HandleCategoryCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.translation_helper" />
            <argument type="service" id="models" />
            <argument type="service" id="shopware_adapter.data_persister.attribute" />
            <argument type="service" id="shopware_adapter.data_persister.translation" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <service id="shopware_adapter.command_handler.remove_category" class="ShopwareAdapter\ServiceBus\CommandHandler\Category\RemoveCategoryCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <!-- Manufacturer command handlers -->

        <service id="shopware_adapter.command_handler.handle_manufacturer" class="ShopwareAdapter\ServiceBus\CommandHandler\Manufacturer\HandleManufacturerCommandHandler" public="false">
            <argument type="service" id="shopware_adapter.shopware_resource.manufacturer" />
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_adapter.data_persister.attribute" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <service id="shopware_adapter.command_handler.remove_manufacturer" class="ShopwareAdapter\ServiceBus\CommandHandler\Manufacturer\RemoveManufacturerCommandHandler" public="false">
            <argument type="service" id="shopware_adapter.shopware_resource.manufacturer" />
            <argument type="service" id="plenty_connector.identity_service" />
