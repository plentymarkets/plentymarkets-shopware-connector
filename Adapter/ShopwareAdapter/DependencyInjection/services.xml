        <service id="shopware_adapter.command_handler.remove_media_category" class="ShopwareAdapter\ServiceBus\CommandHandler\MediaCategory\RemoveMediaCategoryCommandHandler" public="false">
            <argument type="service" id="models" />
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <!-- Order command handlers -->

        <service id="shopware_adapter.command_handler.handle_order" class="ShopwareAdapter\ServiceBus\CommandHandler\Order\HandleOrderCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="shopware_adapter.data_persister.attribute" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <!-- Product command handlers -->

        <service id="shopware_adapter.command_handler.handle_product" class="ShopwareAdapter\ServiceBus\CommandHandler\Product\HandleProductCommandHandler" public="false">
            <argument type="service" id="models" />
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.translation_helper" />
            <argument type="service" id="shopware_adapter.data_persister.attribute" />
            <argument type="service" id="shopware_adapter.request_generator.product" />
            <argument type="service" id="shopware_adapter.data_persister.translation" />
            <argument type="service" id="shopware_adapter.data_provider.shop" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <service id="shopware_adapter.command_handler.remove_product" class="ShopwareAdapter\ServiceBus\CommandHandler\Product\RemoveProductCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <!-- Variation command handlers -->

        <service id="shopware_adapter.command_handler.handle_variation" class="ShopwareAdapter\ServiceBus\CommandHandler\Variation\HandleVariationCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_adapter.request_generator.product.variation" />
            <argument type="service" id="models" />
            <argument type="service" id="shopware_adapter.data_persister.attribute" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <service id="shopware_adapter.command_handler.remove_variation" class="ShopwareAdapter\ServiceBus\CommandHandler\Variation\RemoveVariationCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="models" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <!-- Stock command handlers -->

        <service id="shopware_adapter.command_handler.handle_stock" class="ShopwareAdapter\ServiceBus\CommandHandler\Stock\HandleStockCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="models" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>

        <service id="shopware_adapter.command_handler.remove_stock" class="ShopwareAdapter\ServiceBus\CommandHandler\Stock\RemoveStockCommandHandler" public="false">
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="plenty_connector.logger" />

            <tag name="plenty_connector.command_handler" />
        </service>


        <!-- Order query handlers -->

        <service id="shopware_adapter.query_handler.fetch_all_orders" class="ShopwareAdapter\ServiceBus\QueryHandler\Order\FetchAllOrdersQueryHandler" public="false">
            <argument type="service" id="shopware_adapter.response_parser.order" />
            <argument type="service" id="shopware_adapter.data_provider.order" />
            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="plenty_connector.console.output_handler" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="shopware_adapter.query_handler.fetch_changed_orders" class="ShopwareAdapter\ServiceBus\QueryHandler\Order\FetchChangedOrdersQueryHandler" public="false">
            <argument type="service" id="shopware_adapter.response_parser.order" />
            <argument type="service" id="shopware_adapter.data_provider.order" />
            <argument type="service" id="plenty_connector.logger" />
            <argument type="service" id="plenty_connector.console.output_handler" />

            <tag name="plenty_connector.query_handler" />
        </service>

        <service id="shopware_adapter.query_handler.fetch_order" class="ShopwareAdapter\ServiceBus\QueryHandler\Order\FetchOrderQueryHandler" public="false">
            <argument type="service" id="shopware_adapter.response_parser.order" />
            <argument type="service" id="plenty_connector.identity_service" />
            <argument type="service" id="shopware_adapter.data_provider.order" />

            <tag name="plenty_connector.query_handler" />
        </service>

